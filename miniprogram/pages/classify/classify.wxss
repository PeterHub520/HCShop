/* pages/classify/classify.wxss */
page {
  height: 100%;
}
.body {
  display: flex;
  flex-direction: row;
  height: 100%;
}
.left {
  width: 25%;
  height: 100%;
  background-color: #f3f3f3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.left > view {
  text-align: center;
  height: 10%;
  font-size: 28rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.left_name_hover {
  text-align: center;
  height: 10%;
  font-size: 28rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  color: #7d7cf3;
  border-left: 20rpx solid #7d7cf3;
}
.right > image {
  width: 95%;
  border-radius: 100rpx;
  height: 300rpx;
  display: inline-block;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
}

.right {
  height: 100%;
}

.product {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding-right: 20rpx;
  width: 550rpx;
  height: 200rpx;
  border: 1px solid #ccc;
}
.product > image {
  width: 50%;
  height: 50%;
  margin-left: 50rpx;
}
.product > .text {
  font-size: 28rpx;
  display: block;
  width: 300px;
  flex-wrap: wrap;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 10rpx;
}
